@using CharacterCatalog.Core.Models

@model CharacterCatalog.Web.Models.CharacterViewModel

@{
    ViewData["Title"] = "Create - Database";
    Layout = "~/Views/Shared/_CharacterLayout.cshtml";
}

<h1>Create</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Character.Name" class="control-label"></label>
                <input asp-for="Character.Name" class="form-control" />
                <span asp-validation-for="Character.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Status" class="control-label"></label>
                <select asp-for="Character.Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
                <span asp-validation-for="Character.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Species" class="control-label"></label>
                @Html.DropDownListFor(x => x.SelectedSpeciesId, new SelectList(Model.Species, "SpeciesId", "Name", Model.Character.Species), new { @class = "form-control" })
                <span asp-validation-for="SelectedSpeciesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Type" class="control-label"></label>
                <input asp-for="Character.Type" class="form-control" />
                <span asp-validation-for="Character.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Gender" class="control-label"></label>
                <select asp-for="Character.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                <span asp-validation-for="Character.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.PictureUrl" class="control-label"></label>
                <input asp-for="Character.PictureUrl" class="form-control" />
                <span asp-validation-for="Character.PictureUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Character" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
