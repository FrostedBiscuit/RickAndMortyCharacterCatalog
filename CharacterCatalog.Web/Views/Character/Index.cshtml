@model IEnumerable<CharacterCatalog.Core.Models.Character>

@{
    ViewData["Title"] = "Database";
    Layout = "~/Views/Shared/_CharacterLayout.cshtml";
}

<h1>Database</h1>

<p>
    <a asp-controller="Character" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                <img src="@(item.PictureUrl)" />
            </td>
            <td>
                <a asp-controller="Character" asp-action="Edit" asp-route-id="@item.CharacterId">Edit</a> |
                <a asp-controller="Character" asp-action="Details" asp-route-id="@item.CharacterId">Details</a> |
                <a asp-controller="Character" asp-action="Delete" asp-route-id="@item.CharacterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
